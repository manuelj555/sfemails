{% extends '@OptimeEmail/layout.html.twig' %}

{% block page_header 'Emails Templates' %}

{% block page_header_actions %}
    <a href="{{ path('optime_emails_template_create') }}" class="btn btn-primary">Create</a>
{% endblock page_header_actions %}

{% block content %}

    {% if items|length > 0 %}
        <div class="row row-cols-4">
            {% for item in items %}
                <div class="col">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{ item.config.code }}</h5>
                            <p class="card-text">
                                {{ item.subject }}
                            </p>
                            <a href="#" class="btn btn-primary"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="col alert alert-secondary">No items found.</div>
    {% endif %}


    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th style="width: 340px">ID</th>
                <th>Code</th>
                <th>Subject</th>
                <th>Status</th>
                <th class="col-3 col-xl-3 col-md-2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.uuid }}</td>
                    <td>{{ item.config.code }}</td>
                    <td>{{ item.subject }}</td>
                    <td>{{ item.active ? 'Active' : 'Inactive' }}</td>
                    <td class="d-flex flex-column flex-lg-row">
                        <a class="mb-2 mb-lg-0 flex-fill me-lg-2 btn btn-secondary"
                           href="{{ path('optime_emails_template_edit', {uuid: item.uuid}) }}">Edit</a>

                        <a href="{{ path('optime_emails_template_preview', {uuid: item.uuid}) }}"
                           class="mb-2 mb-lg-0 flex-fill me-lg-2 btn btn-outline-secondary"
                           target="_blank">Preview</a>

                        <a href="{{ path('optime_emails_send_test', {uuid: item.uuid}) }}"
                           class="mb-2 mb-lg-0 flex-fill me-lg-2 btn btn-outline-secondary"
                        >Send Test</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}