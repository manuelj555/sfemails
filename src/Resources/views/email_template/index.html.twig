{% extends '@OptimeEmail/layout.html.twig' %}

{% block page_header 'Emails Templates' %}

{% block page_header_actions %}
    <a href="{{ path('optime_emails_template_create') }}" class="btn btn-primary">Create</a>
{% endblock page_header_actions %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Code</th>
                <th scope="col">Subject</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
            <tr>
                <td>{{ item.uuid }}</td>
                <td>{{ item.config.code }}</td>
                <td>{{ item.subject }}</td>
                <td>{{ item.active ? 'Active' : 'Inactive' }}</td>
                <td>
                    <a href="{{ path('optime_emails_template_edit', {uuid: item.uuid}) }}">Edit</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}